{
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"checkJs": false,
		"module": "system",
		"target": "ES6",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"paths": {
			"~/*": ["./src/*"],
			"app.config": ["./app.config.js"]
		},
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outFile": "./dist/index.js",
		"rootDir": "./"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"],
}